@model Lingsearcher.ViewModels.UserRegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.ValidationSummary(true, "Errors: ")
    </div>
}

@using (Html.BeginForm("Register", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.FullName, new { @for = "txtFullName" })
        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Full name", @id = "txtFullName", @maxlength = "50" })
        @Html.ValidationMessageFor(model => model.FullName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserName, new { @for = "txtUserName" })
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "@Username", @id = "txtUserName", @maxhlength = "15" })
        @Html.ValidationMessageFor(model => model.UserName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, new { @for = "txtEmail" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "example@gmail.com", @id = "txtEmail", type = "email" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>  

    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @for = "txtPassword" })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "********", @id = "txtPassword" })
        @Html.ValidationMessageFor(model => model.Password)
    </div>

    <div class="form-group">
        @Html.Raw("Do you have an account? ") @Html.ActionLink("Sign In", "Login", "Account")
    </div>

    <div class="form-group">
        <input type="submit" value="Sign up" class="btn btn-success" />
        <input type="reset" value="Reset" class="btn btn-danger" />
    </div>
}

