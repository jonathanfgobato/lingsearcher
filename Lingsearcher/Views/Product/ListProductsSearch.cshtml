@model List<Lingsearcher.ViewModels.SearchProductsViewModel>

@{
    ViewBag.Title = "ListProductsSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListProductsSearch</h2>

@for (int i = 0; i < Model.Count; i++)
{
    if (i == 0)
    {
        @:<div class="row mt-4">
    }
    if (i > 0 && i % 3 == 0)
    {
        @:</div>
    }
    if (i > 0 && i % 3 == 0)
    {
        @:<div class="row mt-4">
    }
    <div class="col-md-4 col-centered">
        <img src="~/App_Data/@Model[i].ImageSrc" alt="Product Image" width="200px" height="200px" />
        <h4>@Model[i].NameProduct</h4>
        <h6>Price range: @Model[i].PriceRange</h6>
        @Html.ActionLink("Compare", "ListProductsCompare", "Product", new { json = Newtonsoft.Json.JsonConvert.SerializeObject(Model[i])}, new { @class = "btn btn-info" })

</div>
}
</div>